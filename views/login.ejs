<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/style.css">
</head>

<body>
    <div class="arrange">
        <form class="form" action="/login" method="post">
            <h1 class="intro">Welcome To Login Page</h1>
            <span class="input-span">
                <label for="email" class="label">Email</label>
                <input type="email" name="email" id="email" required />
            </span>
            <span class="input-span">
                <label for="password" class="label">Password</label>
                <input type="password" name="password" id="password" required />
            </span>
            <input class="submit" type="submit" value="Log in" />

            <!-- Display the error message dynamically -->
            <% if (message) { %>
                <p id="error-message" style="color: red;"><%= message %></p>
            <% } %>

            <span class="span">Don't have an account? <a href="/register">Sign up</a></span>
            <span class="span"><a href="/admin">Admin Login</a></span>
        </form>
        
    </div>

    <!-- JavaScript to clear the query parameter -->
    <script>
        // Check if there is a message in the query parameter
        const urlParams = new URLSearchParams(window.location.search);
        if (urlParams.has('message')) {
            // Display the message and remove the query parameter
            setTimeout(() => {
                history.replaceState(null, '', window.location.pathname); // Remove query parameters from URL
            }, 1000); // Time after which the URL is cleaned (1 second)
        }
    </script>
</body>

</html>
